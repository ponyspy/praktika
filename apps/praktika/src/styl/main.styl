@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'


html, body
	height 100%

.title_block
	position absolute
	a
		color white!important
	.search, .logo, .menu_open
		filter: invert(100%)

.footer_block
	position absolute
	bottom 0
	.footer_inner
		border-color white
		.quality_block a
			border-color white
	img
		filter: invert(100%)
	a
		color white!important

.content_block
	position absolute
	width 100%
	height 100%
	background-color black

.announcement_block
	display block
	text-decoration none
	position absolute
	top 240px
	left 40px
	max-width 470px
	z-index 999999999999
	color white
	border-left 4px solid transparent
	padding-left 20px
	&:hover
		border-left 4px solid white
	a
		color white
	.announcement_title
		font 18pt/20pt 'PT Mono Bold'
	.announcement_desc
		margin-top 30px
		font 12pt/14pt 'PT Mono'

.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		background-size cover
		background-position center
		background-repeat no-repeat
		.slide_holder
			position absolute
			width 100%
			height 100%
			background-color rgba(0, 0, 0, 0.15)
	.swiper-pagination
		bottom 110px
		left auto!important
		right 40px!important
		width auto