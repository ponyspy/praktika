@media screen and (max-width: 840px)
	@import 'mobile/_main.styl'

.maket_block.banner
	.over_block
		padding-top 80px
		box-sizing border-box
	.title_block
		height 260px

html, body, .maket_block, .over_block
	height 100%

.banner_block
	width 100%
	height 80px
	padding-left 40px
	padding-right 40px
	padding-top 20px
	box-sizing border-box
	background-color white
	&.close
		display none
	&:hover .banner_close
		display block
	.banner_close
		display none
		float right
		margin-top 10px
		width 20px
		height 20px
		background-image url('/stuff/praktika/icons/x.svg')
		background-size contain
		background-position center
		background-repeat no-repeat
		cursor pointer
	.banner_logo
		display block
		width 120px
		float left

.title_block
	position absolute
	height 0

.announcement_block
	display block
	text-decoration none
	position absolute
	top 35%
	left 40px
	max-width 470px
	z-index 999999
	border-left 4px solid transparent
	padding-left 20px
	color black
	&:hover
		border-left 4px solid black
	.announcement_title
		text-transform lowercase
		font 18pt/28pt 'PT Mono Bold'
	.announcement_s_title
		margin-top 30px
		font 12pt/18pt 'PT Mono'

.slider_block
	width 100%
	height 100%
	user-select none
	.slide_item
		width 100%
		height 100%
		position relative
		video
			position absolute
			z-index 0
			display block
			width 100%
			height 100%
			object-fit cover
			background-size cover
			background-position center
			background-repeat no-repeat
		.slide_holder
			position absolute
			width 100%
			height 100%
			background-color rgba(0, 0, 0, 0.15)
	.swiper-pagination
		bottom 40px
		left auto!important
		right 40px!important
		width auto
		.swiper-pagination-bullet
			background-color transparent!important
			opacity 1!important
			border 1px solid black
			&.swiper-pagination-bullet-active
				background-color black!important

.journal_open
	position absolute
	color white
	bottom 40px
	left 40px
	z-index 99999
	font 14pt/16pt 'PT Mono'
	cursor pointer
	display block
	text-decoration none
	&:hover
		opacity 0.7

.journal_header
	padding-top 40px
	padding-bottom 40px
	background-position center
	background-repeat no-repeat
	background-attachment fixed
	background-size cover
	&.invert
		color white
		background-color black
		.c_item
			color white!important
	.journal_title
		font 28pt/30pt 'PT Mono Bold'
		margin-left 40px
		margin-right 40px

	.journal_categorys
		margin-top 20px
		margin-left 40px
		margin-right 40px
		font 14pt/16pt 'PT Mono'
		.c_item
			cursor pointer
			margin-right 20px
			color black
			text-decoration none
			display inline-block
			margin-bottom 10px
			&.active
				font 14pt/16pt 'PT Mono Bold'
			&:before
				content '#'
			&:hover
				opacity 0.7

.journal_more
	font 14pt/16pt 'PT Mono'
	text-align center
	margin-top 20px
	margin-bottom 20px
	cursor pointer
	&:hover
		opacity 0.7

.jounral_posts
	.post_item
		padding-top 60px
		padding-bottom 60px
		background-position center
		background-repeat no-repeat
		background-attachment fixed
		background-size cover
		&.invert
			background-color black
			.post_inner
				color white
		.post_inner
			max-width 680px
			margin 0 auto
			padding-left 40px
			padding-right 40px
			color black
			text-decoration none
			display block
			&:hover .post_title
				opacity 0.7
		.post_title
			text-transform lowercase
			font 18pt/28pt 'PT Mono Bold'
			margin-bottom 10px
		.post_date
			font 12pt/12pt 'PT Mono'
			margin-bottom 20px
		.post_image
			display block
			width 100%
			margin-bottom 20px
		.post_intro
			font 14pt/20pt 'PT Serif'
			hyphens auto



.maket_block.white
	.footer_block
		.footer_inner
			border-color black!important
		img
			filter: none
		a
			color black!important
	.announcement_block
		color white
		&:hover
			border-left 4px solid white
	.swiper-pagination-bullet
		border 1px solid white!important
		&.swiper-pagination-bullet-active
			background-color white!important
	.swiper-pagination-black
	.swiper-button-black
		display none!important
	.slider_navigate
		color white
	.over_block
		background-color black
	.slide_item
		color white