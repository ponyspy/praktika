@media screen and (max-width: 840px)
	@import 'mobile/_events.styl'


.events_block
	margin 40px auto
	max-width 960px
	padding-left 30px
	padding-right 30px

.event_item
	display inline-block
	vertical-align top
	width 33.333333333%
	font-size 0
	color black
	text-decoration none
	padding-left 10px
	padding-right 10px
	margin-bottom 40px
	box-sizing border-box
	&:hover
		.event_title
		.event_description
			opacity 0.7
	.event_poster
		width 100%
		height 220px
		position relative
		overflow hidden
		&.hover:hover
			.poster_main
				display 0
			.poster_hover
				opacity 1
		.poster_hover
		.poster_main
			top 0; left 0; right 0; bottom 0;
			margin auto
			position absolute
			background-position center
			background-repeat no-repeat
			background-size cover
			transition .3s linear
		.poster_hover
			opacity 0
		.poster_main
			&:hover
				transition .3s linear
				top -20px; left -20px; right -20px; bottom -20px;
	.event_title
		margin-top 20px
		font 16pt/18pt 'PT Mono Bold'
	.event_description
		margin-top 20px
		font 12pt/18pt 'PT Serif'