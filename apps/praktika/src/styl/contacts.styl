@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_contacts.styl'

html, body
	height 100%

.title_block
	position absolute
	height 0

.footer_block
	position absolute
	bottom 0

.content_block
	position absolute
	width 100%
	height 100%

.contacts_block
	position absolute
	bottom 0
	z-index 99
	width 100%
	height 380px
	background-color white
	.contacts_inner
		max-width 960px
		padding-left 40px
		padding-right 40px
		margin 40px auto
		overflow hidden
		column-count: 2;
		.column
			margin-bottom 40px
			overflow hidden
			width 100%
			position relative
			.title
				width 40%
				font 12pt/16pt 'PT Mono Bold'
				max-width 120px
				float left
			.value
				width 60%
				font 12pt/16pt 'PT Mono'
				float left
				padding-left 10%
				a
					color black
					text-decoration none
					&:hover
						opacity 0.7

.map_block
	width 100%
	height 100%
