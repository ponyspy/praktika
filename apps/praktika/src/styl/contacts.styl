@media screen and (max-width: 840px)
	@import 'mobile/_contacts.styl'

html, body
	height 100%

.title_block
	position absolute
	height 0
	&.open
		height 180px

.under_block
	width 100%
	position absolute
	bottom 0
	z-index 99

.footer_block
	background-color white

.content_block
	position absolute
	width 100%
	height 100%

.contacts_block
	background-color white
	.contacts_inner
		max-width 960px
		padding-left 40px
		padding-right 40px
		padding-top 20px
		margin 0px auto
		overflow hidden
		column-width 340px
		column-gap 20px
		vertical-align top
		.column
			display inline-block
			break-inside avoid
			margin-top 20px
			margin-bottom 20px
			width 100%
			position relative
			overflow hidden
			.title
				float left
				// vertical-align top
				// display inline-block
				width 40%
				font 12pt/18pt 'PT Mono Bold'
				min-width 120px
				padding-right 40px
				box-sizing border-box
			.value
				float left
				// vertical-align top
				// display inline-block
				width 60%
				font 12pt/18pt 'PT Mono'
				a
					color black
					text-decoration none
					&:hover
						opacity 0.7

.map_block
	width 100%
	height 100%
	.map_link
		color black
		text-decoration none
