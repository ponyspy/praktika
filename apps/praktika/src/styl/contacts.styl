@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_contacts.styl'

html, body
	height 100%

.title_block
	position absolute
	height 0
	&.open
		height 160px

.footer_block
	position absolute
	bottom 0

.content_block
	position absolute
	width 100%
	height 100%

.contacts_block
	position absolute
	bottom 0
	z-index 99
	width 100%
	padding-bottom 80px
	background-color white
	.contacts_inner
		max-width 960px
		padding-left 40px
		padding-right 40px
		margin 40px auto
		overflow hidden
		column-count 2
		column-gap 20px
		.column
			break-inside avoid
			margin-bottom 40px
			width 100%
			position relative
			overflow hidden
			.title
				float left
				// vertical-align top
				// display inline-block
				width 40%
				font 12pt/16pt 'PT Mono Bold'
				min-width 120px
				padding-right 40px
				box-sizing border-box
			.value
				float left
				// vertical-align top
				// display inline-block
				width 60%
				font 12pt/16pt 'PT Mono'
				a
					color black
					text-decoration none
					&:hover
						opacity 0.7

.map_block
	width 100%
	height 100%
