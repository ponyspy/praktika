@media screen and (max-width: 1040px) {
	img.double {
		max-width: 100vw!important
		margin-left: calc((100% - 100vw) / 2)!important;
		box-sizing border-box
	}
}

@media screen and (max-width: 1040px) {
	img.left {
		margin-left: calc((100% - 100vw) / 2)!important;
	}
	img.right {
		margin-right: calc((100% - 100vw) / 2)!important;
	}
}