.head_meta
	display none

.schedule_ext
.schedule_item
	margin-left 40px!important
	&:first-child
		margin-left 20px!important
	&:last-child
		margin-right 20px!important

.swiper-pagination
	right 20px!important
	&.no_schedule
		bottom 20px!important

.event_title
	font 22pt/24pt 'PT Mono Bold'!important
	padding-left 20px!important
	padding-right 20px!important

.event_main
	display flex
	flex-direction column
	.event_content
		order 1
		width 100%!important
		float none!important
		padding-right 20px!important
	.event_meta
		order 2
		margin-top 60px
		width 100%!important
		float none!important
		padding-left 20px!important
		padding-right 0!important


.event_members
	margin-top 40px!important
	width 100%!important
	padding-left 0!important
	.members_inner
		padding-right 20px!important
		.group_title
			float none!important
			width 80%!important
			padding-right 0px!important
			margin-bottom 20px
		.group_list
			margin-left 40px
			padding-left 0px!important
			float none!important
			width 100%!important


.event_comments
	width 100%!important
	padding-left 0!important
	.comments_inner
		padding-left 20px!important
		padding-right 20px!important
		.comment_item
			.comment_column
				.col_photo_mobile
					display block!important
					margin-bottom 20px!important
				.col_photo
					display none!important
				.col_name
					margin-bottom 10px!important
				.col_title
					margin-bottom 20px!important
				.col_description
					max-width none!important
				&.top
					text-align center
					display flex
					flex-direction column
					.left
						order 2
						margin-bottom 0!important
					.right
						order 1
						margin-bottom 0!important
				.column
					&.left
						width 100%!important
						padding-right 0!important
					&.right
						width 100%!important
						padding-left 0!important


.event_partners
	margin-top 40px!important
	.partners_title
		color black!important
		width 100%!important
		float none!important
		padding-left 20px!important
		padding-right 20px!important
	.partners_list
		float none!important
		width 100%!important
		padding-left 0!important
		padding-right 0!important
		.partner_item img
			margin 40px auto!important
			float none!important
			margin-right none!important


.event_publications
	margin-top 40px!important
	.publications_title
		color black!important
		width 100%!important
		padding-left 20px!important
		padding-right 20px!important
		margin-bottom 40px!important
		float none!important
	.publications_list
		float none!important
		width 100%!important
		padding-left 20px!important
		padding-right 20px!important
		.publication_item
			.publication_title
				width 100%!important
				float none!important
			.publication_description
				margin-top 20px!important
				padding-left 0!important
				width 100%!important
				float none!important
				max-width none!important
