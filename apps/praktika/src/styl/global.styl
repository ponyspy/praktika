@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

h1, h2
	margin 0
	padding 0

a
	color black

.title_block, .footer_block
	a, .logo span
		cursor pointer
		text-decoration none
		border-bottom 1px solid transparent
		&:hover
			border-bottom 1px solid black
		&.active
			border-bottom 1px solid black

.main_block
	max-width 960px
	margin 0 auto
	overflow hidden
	position relative
	padding-top 20px
	padding-bottom 20px
	box-sizing border-box
	font 12pt/14pt 'MinionPro Medium'
	// border 1px solid red

.title_block
	height 100px
	padding-left 40px
	padding-right 40px
	padding-bottom 40px
	.stargazer_block
		margin-top 5px
	.menu_block
		font 14pt/16pt 'MinionPro Medium'
		display flex
		justify-content space-between
		border-bottom 1px solid transparent
		letter-spacing 4px
		.mail
			display none
			letter-spacing 2px
			font 14pt/16pt 'MinionPro Semibold'
		a
			padding-bottom 1px
	.menu_drop
		display none
		width 30px
		height 40px
		position fixed
		right 20px
		z-index 999999
		transform rotate(0deg)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 3px
			width 100%
			background black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0px
		span:nth-child(2)
		span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.open
			span:nth-child(1)
				top 10px
				width 0%
				left 50%
			span:nth-child(2)
				transform rotate(45deg)
			span:nth-child(3)
				transform rotate(-45deg)
			span:nth-child(4)
				top 10px
				width 0%
				left 50%

.content_block
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.footer_block
	padding-top 150px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	display flex
	justify-content space-between
	align-items flex-end
	.logo, .contatcs
		flex 5
	.language
		flex 4
	a
		margin-right 10px
		&:last-child
			margin-right 0
	img
		display none