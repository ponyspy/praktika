@import '_fonts.styl'
@media screen and (max-width: 840px)
	@import 'mobile/_global.styl'

body
	margin 0
	padding 0
	&.stop_scroll
		height 100%
		overflow hidden
	// font-smoothing: antialiased;
	// -moz-osx-font-smoothing: grayscale;


.maket_block.white
	.title_block
		a, span
			color white!important
		.search, .logo, .menu_open
			filter: invert(100%)
	.footer_block
		.social_block
		.footer_inner
			border-color white
		img
			filter: invert(100%)
		a
			color white!important




.search_block
	display none
	z-index 9999999999999999999
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color white
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	overflow scroll
	&.show
		display block
	.search_close
		cursor pointer
		margin-top 5px
		width 40px
		height 40px
		background-position center
		background-repeat no-repeat
		background-size 50%
		background-image url('/stuff/praktika/icons/x.svg')
	.search_input
		-webkit-appearance: none;
		border-radius 0
		margin 0 auto
		padding 0
		display block
		margin-top 40px
		margin-bottom 80px
		padding-bottom 10px
		font 22pt/24pt 'PT Mono'
		text-align center
		border none
		outline none
		width 100%
		max-width 960px
		border-bottom 1px solid black
	.context_column
		overflow hidden
		margin-bottom 80px
		position relative
		.context_title
			// background-color rgba(131, 193, 216, 1.000)
			font 12pt/14pt 'PT Mono'
			padding-bottom 40px
			max-width 960px
			margin 0 auto
		.context_results
			// background-color rgba(231, 197, 123, 1.000)
			max-width 960px
			margin 0 auto
			overflow hidden
			.results_holder
				cursor pointer
				font 12pt/14pt 'PT Mono'
				&:hover
					opacity 0.7
			.result_item
				// background-color green
				display inline-block
				vertical-align top
				color black
				text-decoration none
				margin-right -4px
				margin-bottom 40px
				box-sizing border-box
				width 50%
				overflow hidden
				padding-right 20px
				&.hidden
					display none
				&:hover
					opacity 0.7
				&:nth-child(2n)
					padding-left 20px
					padding-right 0
		&.events
			.item_poster
				// background-color lightgrey
				width 100%
				height 300px
				background-position center
				background-size cover
				background-repeat no-repeat
			.item_title
				text-transform lowercase
				margin-top 10px
				font 22pt/24pt 'PT Mono Bold'
		&.members
			.item_photo
				// background-color lightgrey
				width 100px
				height 100px
				margin-right 20px
				float left
				background-position center
				background-size cover
				background-repeat no-repeat
			.item_roles
				font 12pt/14pt 'PT Mono'
				.role
					display inline-block
					margin-right 5px
					&:last-child:after
						content ''
					&:after
						content ','
			.item_name
				margin-top 10px
				font 12pt/14pt 'PT Mono Bold'





.title_block
	width 100%
	text-align center
	height 160px
	font 12pt/14pt 'PT Mono'
	position relative
	z-index 9999999
	&.open
		.stargazer_block
			display block!important
		height 160px
		background-color black
		a, span
			color white!important
		.menu_block
			flex-grow 4.29
		.search, .logo, .menu_open
			filter: invert(100%)
	.title_inner
		position relative
		margin-left 40px
		margin-right 40px
		.stargazer_block
			display none
			position absolute
			top 42px
			a
				text-decoration none
				margin 0!important
				padding-left 10px
				padding-right 10px
				padding-top 3px
				padding-bottom 3px
				float none!important
				margin-top 5px!important
				font-size 16pt
				line-height 16pt
				display block
	.panel_block
		display flex
		justify-content center
		align-items flex-start
	.nav_block
		flex-grow 5.8
		padding-bottom 6px
		overflow hidden
		.search
			margin-top 13px
		.lang
			margin-top 15px
		a
			font-weight bold
			display block
			float left
			color black
			text-decoration none
			margin-right 20px
			&:last-child
				margin-right 0
	.menu_block
		flex-grow 3
		padding-top 5px
		display flex
		.menu_group
			margin-top 5px
			float left
			display block
			margin-left 40px
			.group_spacer
				cursor default
			.group_item
				color black
				text-decoration none
				&:hover
					opacity 0.7
		.menu_item
			margin-top 5px
			float left
			display block
			color black
			text-decoration none
			margin-left 40px
			&:hover
				opacity 0.7
		.menu_open
			width 40px
			height 40px
			background-image url('/stuff/praktika/icons/menu.svg')
			background-size contain
			background-position center
			background-repeat no-repeat
			cursor pointer
			&.open
				background-size 50%
				background-image url('/stuff/praktika/icons/x.svg')
		.menu_items
			margin-top 5px
			float left
			text-align left
			.items_main
				float left
			&.open
				.menu_group
				.menu_item
					margin-bottom 15px
					margin-right 0
					float none
				.items_drop
					display block
			.items_drop
				display none
	.logo_spacer
		width 120px
	.logo
		position absolute
		top 0
		right 0
		padding-top 20px
		padding-bottom 20px
		width 120px


.footer_block
	width 100%
	font 10pt/12pt 'PT Mono'
	padding-top 20px
	padding-bottom 20px
	z-index 9999999
	.footer_inner
		margin-left 40px
		margin-right 40px
		padding-top 20px
		border-top 1px solid black
		.footer_main
			display flex
			justify-content space-between
			align-items center
		.footer_under
			margin-top 20px
			display flex
			justify-content space-between
	a
		color black
		text-decoration none
		&:hover
			opacity 0.7
	.logo_dep
		flex-grow 1.25
		img
			display block
			width 110px
	.quality
		max-width 230px
		flex-grow 4
		img
			width 45px
			float left
			display block
			margin-right 15px
	.social_block
		flex-grow 1
		text-align right
		a
			margin-left 20px