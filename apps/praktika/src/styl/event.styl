.title_block
	position absolute
	height 0

html, body, .maket_block, .over_block
	height 100%

.event_head
	width 100%
	height 100%
	.head_meta
		top 160px
		left 40px
		z-index 999
		position absolute
		.event_head_title
			text-transform lowercase
			font 28pt/30pt 'PT Mono Bold'
		.event_head_s_title
			font 12pt/18pt 'PT Mono'
			margin-top 40px
			max-width 400px

.event_schedule
	z-index 999
	position absolute
	background-color black
	color white
	padding-top 15px
	padding-bottom 15px
	box-sizing border-box
	bottom 0
	width 100%
	&.fix
		top 0
		bottom auto
		position fixed
	.schedule_ticket
		font 14pt/16pt 'PT Mono Bold'
		float left
		margin-left 40px
		margin-top 10px
		&:hover
			cursor pointer
			opacity 0.7
	.schedule_item
		float left
		margin-left 40px
		cursor pointer
		&:hover
			opacity 0.7
		.item_date
			font 10pt/12pt 'PT Mono Bold'
			margin-bottom 10px
		.item_time
			font 10pt/12pt 'PT Mono'

.event_title
	text-transform lowercase
	padding-left 40px
	padding-right 40px
	padding-top 40px
	padding-bottom 40px
	font 28pt/30pt 'PT Mono Bold'

.event_main
	overflow hidden
	.event_meta
		width 20%
		float left
		padding-left 40px
		padding-right 20px
		box-sizing border-box
		font 12pt/14pt 'PT Mono Bold'
		color grey
		.meta
			margin-bottom 10px
			&.age:after
				content '+'

	.event_description
		font 14pt/16pt 'PT Serif'
		padding-left 20px
		padding-right 40px
		box-sizing border-box
		float left
		width 80%
		max-width 960px

.event_members
	margin-top 80px
	width 80%
	max-width 960px
	padding-left 20%
	.members_inner
		padding-left 20px
		padding-right 40px
		.members_group
			overflow hidden
			margin-bottom 40px
			&:last-child
				margin-bottom 0
			.group_title
				float left
				width 20%
				font 12pt/14pt 'PT Mono Bold'
				padding-right 40px
				box-sizing border-box
			.group_list
				padding-left 40px
				box-sizing border-box
				font 12pt/14pt 'PT Mono'
				float left
				width 80%
				column-width 240px
				column-gap 40px
				.list_item
					display block
					color black
					text-decoration none
					&:hover
						opacity 0.7














.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		position relative
		.slide_image
			position absolute
			z-index 0
			width 100%
			height 100%
			background-size cover
			background-position center
			background-repeat no-repeat
		.slide_holder
			position absolute
			width 100%
			height 100%
			background-color rgba(0, 0, 0, 0.15)
	.swiper-pagination
		bottom 100px
		left auto!important
		right 40px!important
		width auto
		.swiper-pagination-bullet
			background-color transparent!important
			opacity 1!important
			border 1px solid black
			&.swiper-pagination-bullet-active
				background-color black!important





.maket_block.white
	.footer_block
		img
			filter: none
		a
			color black!important
	.event_head
		color white
	.swiper-pagination-bullet
		border 1px solid white!important
		&.swiper-pagination-bullet-active
			background-color white!important
	.swiper-pagination-black
	.swiper-button-black
		display none!important
	.slider_navigate
		color white
	.over_block
		background-color black
	.slide_item
		color white