@media screen and (max-width: 840px)
	@import 'mobile/_event.styl'


.title_block
	position absolute
	height 0

html, body, .maket_block, .over_block
	height 100%


.widget_block
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.8)
	display none
	z-index 99999999999999
	&.open
		display block
	#pn_widget
		display none
		position fixed
		max-width 800px
		width 100%
		height 600px
		top 0; left 0; right 0; bottom 0;
		margin auto
		&.show
			display block


.event_head
	width 100%
	height 100%
	.head_meta
		top 160px
		left 40px
		height 0
		z-index 999
		position absolute
		.event_head_title
			max-width 500px
			text-transform lowercase
			font 28pt/30pt 'PT Mono Bold'
		.event_head_s_title
			font 12pt/18pt 'PT Mono'
			margin-top 40px
			max-width 400px


.event_schedule
	z-index 9999999
	position absolute
	color white
	box-sizing border-box
	bottom 0
	width 100%
	overflow hidden
	user-select none
	height 70px
	background-color rgba(0, 0, 0, 0.7)
	transition .2s linear
	&.fix
		transition .2s linear
		background-color black
		top 0
		bottom auto
		position fixed
	.schedule_outer
		width 100%
		overflow hidden	// overflow-x scroll
		-webkit-overflow-scrolling touch
		&.mobile
			overflow-x scroll
	.schedule_inner
		vertical-align top
		display inline-block
		white-space nowrap
		font-size 0
	.schedule_item
		text-transform lowercase
		display inline-block
		white-space nowrap
		padding-top 15px
		padding-bottom 15px
		margin-left 40px
		vertical-align middle
		&.active
			cursor pointer
			&:hover
				opacity 0.7
		&:last-child
			margin-right 40px
		.item_ticket
			font 14pt/16pt 'PT Mono Bold'
		.item_date
			font 10pt/12pt 'PT Mono Bold'
			margin-bottom 10px
		.item_time
			font 10pt/12pt 'PT Mono'


.event_title
	max-width 500px
	text-transform lowercase
	padding-left 40px
	padding-right 40px
	padding-top 40px
	padding-bottom 40px
	font 28pt/30pt 'PT Mono Bold'


.event_main
	overflow hidden
	.event_meta
		width 20%
		float left
		padding-left 40px
		padding-right 20px
		box-sizing border-box
		font 12pt/14pt 'PT Mono Bold'
		color grey
		.meta
			margin-bottom 10px
			&.age:after
				content '+'
	.event_description
		hyphens auto
		font 14pt/20pt 'PT Serif'
		padding-left 20px
		padding-right 40px
		box-sizing border-box
		float left
		width 80%
		max-width 800px  // 960px


.event_members
	margin-top 80px
	width 80%
	max-width 960px
	padding-left 20%
	.members_inner
		padding-left 20px
		padding-right 40px
		max-width 960px
		.members_group
			overflow hidden
			margin-bottom 40px
			&:last-child
				margin-bottom 0
			.group_title
				text-transform lowercase
				float left
				width 20%
				font 12pt/18pt 'PT Mono Bold'
				padding-right 40px
				box-sizing border-box
			.group_list
				padding-left 40px
				box-sizing border-box
				font 12pt/18pt 'PT Mono'
				float left
				width 80%
				column-width 240px
				column-gap 40px
				.list_item
					display block
					color black
					text-decoration none
				a.list_item:hover
					opacity 0.7


.event_comments
	margin-top 40px
	width 80%
	padding-left 20%
	padding-top 40px
	padding-bottom 40px
	background-color rgb(247, 247, 247)
	.comments_inner
		max-width 960px
		padding-left 20px
		padding-right 40px
		box-sizing border-box
		// background-color rgba(131, 193, 216, 1.000)
		.comment_item
			overflow hidden
			margin-bottom 40px
			// background-color rgba(231, 197, 123, 1.000)
			&:last-child
				margin-bottom 0
			.comment_column
				overflow hidden
				.column
					box-sizing border-box
					float left
					&.left
						width 20%
						padding-right 40px
						// background-color lightgrey
					&.right
						// background-color green
						width 80%
						max-width 560px // none
						padding-left 40px
					.col_title
						text-transform lowercase
						font 12pt/18pt 'PT Mono Bold'
						margin-bottom 40px
					.col_photo_mobile
						margin 0 auto
						display none
					.col_photo_mobile
					.col_photo
						border-radius 100%
						width 80px
						height 80px
						background-position center
						background-size cover
						background-repeat no-repeat
					.col_name
						display block
						text-decoration none
						color black
						font 12pt/18pt 'PT Mono'
						margin-bottom 40px
					a.col_name:hover
						opacity 0.7
					.col_description
						hyphens auto
						font 12pt/18pt 'PT Serif'


.event_partners
	margin-top 80px
	overflow hidden
	.partners_title
		font 12pt/14pt 'PT Mono Bold'
		color grey
		width 20%
		float left
		padding-left 40px
		padding-right 20px
		box-sizing border-box
	.partners_list
		float left
		width 80%
		box-sizing border-box
		padding-left 20px
		padding-right 40px
		max-width 960px
		overflow hidden
		.partner_item img
			display block
			float left
			margin-right 40px
			height 65px


.event_publications
	margin-top 80px
	overflow hidden
	.publications_title
		font 12pt/14pt 'PT Mono Bold'
		color grey
		width 20%
		padding-left 40px
		padding-right 20px
		box-sizing border-box
		float left
		// background-color rgba(243, 153, 219, 1.000)
	.publications_list
		float left
		width 80%
		max-width 960px
		padding-left 20px
		padding-right 40px
		box-sizing border-box
		// background-color lightgrey
		.publication_item
			overflow hidden
			margin-bottom 40px
			&:last-child
				margin-bottom 0
			.publication_title
				// background-color green
				box-sizing border-box
				width 20%
				float left
				color black
				text-decoration none
				font 12pt/14pt 'PT Mono'
				&:hover
					opacity 0.7
			.publication_description
				// background-color rgba(231, 197, 123, 1.000)
				padding-left 40px
				box-sizing border-box
				hyphens auto
				max-width 560px // none
				width 80%
				float left
				font 12pt/18pt 'PT Serif'


.slider_block
	width 100%
	height 100%
	.slide_item
		width 100%
		height 100%
		position relative
		.slide_image
			position absolute
			z-index 0
			width 100%
			height 100%
			background-size cover
			background-position center
			background-repeat no-repeat
		.slide_holder
			position absolute
			width 100%
			height 100%
			background-color rgba(0, 0, 0, 0.15)
	.swiper-pagination
		bottom 100px
		left auto!important
		right 40px
		width auto
		&.no_schedule
			bottom 40px
		.swiper-pagination-bullet
			background-color transparent!important
			opacity 1!important
			border 1px solid black
			&.swiper-pagination-bullet-active
				background-color black!important


.footer_block
	margin-top 60px

.maket_block.white
	.footer_block
		.footer_inner
			border-color black!important
		img
			filter: none
		a
			color black!important
	.event_head
		color white
	.swiper-pagination-bullet
		border 1px solid white!important
		&.swiper-pagination-bullet-active
			background-color white!important
	.swiper-pagination-black
	.swiper-button-black
		display none!important
	.slider_navigate
		color white
	.over_block
		background-color black
	.slide_item
		color white