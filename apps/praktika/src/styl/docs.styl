@media screen and (max-width: 840px)
	@import 'mobile/_docs.styl'


.content_block
	max-width 960px
	margin 0 auto
	padding-left 40px
	padding-right 40px
	box-sizing border-box

.docs_title
	font 28pt/30pt 'PT Mono Bold'
	margin-top 20px
	margin-bottom 40px

.docs_list
	font 14pt/18pt 'PT Mono'
	column-width 300px
	column-gap 40px
	margin-bottom 40px
	.doc_item
		display block
		margin-bottom 40px
		text-decoration none
		color black
		&:hover
			opacity 0.7