@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_team.styl'

.content_block
	max-width 960px
	margin 0 auto
	padding-left 40px
	padding-right 40px

.members_header
	top 160px
	left 0
	width 100%
	padding-top 20px
	background-color white
	position absolute
	z-index 999
	.members_header_inner
		margin 0 auto
		max-width 960px
		padding-left 40px
		padding-right 40px
	&.fix
		position fixed
		top 0

.members_title
	font 22pt/24pt 'PT Mono Bold'
	margin-bottom 10px
	text-transform lowercase

.members_roles
	font 14pt/16pt 'PT Mono'
	margin-bottom 20px
	cursor pointer
	display inline-block
	&:after
		content ''
		z-index 0
		position relative
		background-image url('/stuff/praktika/icons/arrow_list.svg')
		width 8px
		height 8px
		margin-left 15px
		display inline-block
		transform rotate(90deg)
		vertical-align middle
		background-position top
		background-size contain
		background-repeat no-repeat


.members_list
	margin-top 100px
	margin-bottom 60px
	overflow hidden
	padding 10px
	box-sizing border-box
	margin-left -20px
	margin-right -20px

.member_item
	text-align center
	float left
	width 16.666666667%
	padding-top 16.666666667%
	box-sizing border-box
	position relative
	&:hover
	&.active
		.in
			transition 0.20s ease
			top 40px; left 40px; right 40px; bottom 40px
	.in
		-webkit-backface-visibility: hidden;
		-webkit-transform: translate3d(0, 0, 0);
		-webkit-transform: translateZ(0) scale(1.0, 1.0);
		transform: translateZ(0);

		transition 0.20s ease
		background-repeat no-repeat
		background-position center
		background-size cover
		position absolute
		filter: grayscale(100%)
		top 10px
		left 10px
		right 10px
		bottom 10px
		margin auto
		background-color grey
		box-sizing border-box
		cursor pointer

.panel
	float left
	width 100%
	.in
		padding 10px
		box-sizing border-box
		// margin 10px
		overflow hidden
		.panel_photo
			width 49%
			height 460px
			float left
			background-position top
			background-size cover
			background-repeat no-repeat
		.panel_body
			width 51%
			float left
			padding-left 60px
			box-sizing border-box
			.member_head
				overflow hidden
				margin-bottom 30px
				.member_name
					text-transform lowercase
					font 26pt/28pt 'PT Mono Bold'
					width 60%
					float left
				.member_roles
					width 40%
					text-align right
					float right
					font 12pt/14pt 'PT Mono Bold'
					.role
						display inline-block
						margin-left 10px
			.member_events
				margin-bottom 40px
				.events_title
					font 12pt/14pt 'PT Mono Bold'
				.events_list
					.event_item
						margin-top 5px
						color black
						text-decoration none
						display inline-block
						font 12pt/14pt 'PT Mono'
						margin-right 20px
						&:last-child
							margin-right 0
						&:hover
							opacity 0.7
			.member_description
				hyphens auto
				font 14pt/22pt 'PT Serif'
				p
					margin 0
					padding 0
					margin-bottom 20px