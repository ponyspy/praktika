mixin items(members)
	each member in members
		.list_item
			a.item_rm.member(href='#', id=member._id) -- удалить
			a.item_title(href='/admin/members/edit/' + member._id, class=member.status)= (member.i18n.name.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')

mixin counters(count, skip)
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед
