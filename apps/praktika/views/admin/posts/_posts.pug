.list_items
	each post in posts
		.list_item
			a.item_rm.post(href='#', id=post._id) -- удалить
			a.item_title(href='/admin/posts/edit/' + post._id, class=post.status)= (post.i18n.title.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')

.list_counter
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед
