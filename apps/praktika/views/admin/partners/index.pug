extends ../layout

block header_meta
	- var content_title= 'ПАРТНЕРЫ'

block header_include
	- var include_css = ['add.css']
	- var include_js = ['lists.js']

block sub_menu
	a.sub_item.back_link(href='/admin') Назад
	span.sub_item.toggle_rm Удалить
	.sub_right_block

		.sub_drop.type(style='z-index: 2;')
			.drop_title Тип
			.drop_inner
				.drop_item(class='all').select Все
				each type in static_types.partners_types
					.drop_item(class=type)= __n(type, 5)

		.sub_drop.status(style='z-index: 1;')
			.drop_title Статус
			.drop_inner
				.drop_item(class='all').select Все
				.drop_item(class='base') Обычный
				.drop_item(class='hidden') Скрытый
				.drop_item(class='special') Особый

		input.sub_search(type='text', placeholder='Поиск...')

block content
	.title= content_title
	br
	a.add(href='/admin/partners/add') + Добавить партнера
	br
	br
	.lists_block
		include _partners