mixin items(partners)
	each partner in partners
		.list_item
			a.item_rm.partner(href='#', id=partner._id) -- удалить
			a.item_title(href='/admin/partners/edit/' + partner._id, class=partner.status)= (partner.i18n.title.get('ru') || '!!! ПУСТОЕ ПОЛЕ !!!')

mixin counters(count, skip)
	a.list_back(href='#'): b назад
	span= ' - '
	select.list_select
		- var i = 0;
		while i < count
			option(value=i selected= (i == skip / 10) )= i+1
			- i++
	span= ' - '
	a.list_next(href='#'): b вперед


if load_list
	.list_items
		+items(partners)
	.list_counter
		+counters(count, skip)