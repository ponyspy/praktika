extends layout

block header_meta
	- var content_title= __('практика') + ' : ' + __('контакты')
	- var content_description= ''

block header_include
	- var include_css = ['contacts.css']
	- var include_ext_js = ['https://maps.googleapis.com/maps/api/js?key=AIzaSyDkr2WFD1js1vOwpY8nc58N6jNkjzUv2aA&language=' + locale]
	//- - var include_ext_js = ['https://maps.googleapis.com/maps/api/js?key=AIzaSyC7n_pR2zuaOwELGCsE8QVkq-trzPnWb10&language=' + locale]
	- var include_js = ['contacts.js', 'g_maps.js']


block content
	.map_block#map-canvas(data-placeholder= __('Большой Козихинский<br>переулок 30').replace('<br>', ' '))

block under
	.contacts_block
		.contacts_upper
		.contacts_inner

			.contacts_group.main
				.column
					.title= __('адрес')
					.value
						span!= __('Большой Козихинский<br>переулок 30') + ', ' + __('метро') + ': '
						span= __('«Маяковская»') + ', ' + __('«Пушкинская»')
				.column
					.title= __('заведующая литературной частью')
					.value
						div= __('Анна Банасюкевич')
						div: a(href='mailto:anna.v.banas@gmail.com') anna.v.banas@gmail.com
				.column
					.title= __('касса театра') + ' ' + '11:00 – 20:45'
					.value
						div: a(href='tel:+7 (495) 544-55-45') +7 495 544-55-45
						div: a(href='mailto:tickets@praktikatheatre.ru') tickets@praktikatheatre.ru
				.column
					.title= __('администрация') + ' ' + '10:00 – 18:00'
					.value
						div: a(href='tel:+7 (495) 258-55-65') +7 495 258-55-65
						div: a(href='mailto:info@praktikatheatre.ru') info@praktikatheatre.ru

			.contacts_group.drop
				.column
					.title= __('пресс-атташе')
					.value
						div= __('Мария Никитина')
						div: a(href='mailto:nikitina@praktikatheatre.ru') nikitina@praktikatheatre.ru
						//- div: a(href='tel:+7 (926) 231-10-60') +7 926 231-10-60
				.column
					.title= __('главный администратор')
					.value
						div= __('Вероника Устимук')
						div: a(href='mailto:admin@praktikatheatre.ru') admin@praktikatheatre.ru
						div: a(href='tel:+7 (495) 258-55-65') +7 495 258-55-65
				.column
					.title= __('директор')
					.value
						div= __('Борис Мездрич')
						div: a(href='mailto:info@praktikatheatre.ru') info@praktikatheatre.ru
				.column
					.title= __('художественный руководитель')
					.value
						div= __('Марина Брусникина')
						div: a(href='mailto:info@praktikatheatre.ru') info@praktikatheatre.ru

