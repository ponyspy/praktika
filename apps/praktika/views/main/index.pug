extends layout

block header_meta
	- var content_title= __('практика')
	- var content_description= ''
	- var content_images = [medias && medias.length && medias[0].poster]
	- var content_banner = true
	- var content_footer_hidden = false

block header_include
	- var include_libs_css = ['swiper.min.css']
	- var include_css = ['main.css']
	- var include_libs_js = ['swiper.min.js', 'js.cookie.js']
	- var include_js = ['main.js']


block over
	.slider_block.swiper-container
		.swiper-wrapper
			each media in medias
				.slide_item.swiper-slide(data-style=media.style)
					video(autoplay=false, loop=true, muted=true, playsinline=true, controls=false, poster=media.poster, src=media.video)
					if media.holder
						.slide_holder
					if media.announce
						a.announcement_block(href=media.announce.link, data-id=media.announce._short_id)
							.announcement_title!= media.announce.i18n.title.get(locale)
							if media.announce.i18n.s_title.get(locale) != ''
								.announcement_s_title!= media.announce.i18n.s_title.get(locale)

		if medias.length > 1
			.swiper-pagination.swiper-pagination-white
			.swiper-pagination.swiper-pagination-black

		a.journal_open(href='#journal') журнал «Практики»


block content
	.journal_title(anchor='journal') журнал
	.journal_categorys
		.c_item новости
		.c_item дела
		.c_item до и после
		.c_item жизнь других
		.c_item так не пойдет
	.jounral_posts
		- var arr = new Array(6)
		each post, i in arr
			a.post_item(href='#', class= i == 1 || i == 3 ? 'invert' : '', style= i == 1 ? 'background-image: url(/stuff/praktika/beta/t2.jpeg)' : ''): .post_inner
				.post_title Масштабы турбулентности
				//- .post_categorys
					.c_item новости
					.c_item дела
					.c_item до и после
				.post_date 22.07.2018
				if i % 2 == 0
					img.post_image(src='/stuff/praktika/beta/t1.jpeg')
				if i !== 2
					.post_intro Что произойдет, если налить молоко в кофе и помешать ложечкой? Может показаться, что ничего особенного: молоко разобьется на хаотичные течения и постепенно растворится в кофе. Но если взглянуть на это с точки зрения физики (и, возможно, в медленной записи), то можно заметить интересную особенность: сперва молоко образует широкие (крупномасштабные) течения, которые затем будут распадаться на все более и более мелкие...