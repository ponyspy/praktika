if members && members.length > 0
	.context_column.members
		.context_title= __('команда')
		.context_results
			each member in members
				a.result_item(href='/team#' + member._short_id)
					.item_photo(style='background-image: url(' + member.photo_preview + ')')
					.item_roles
						each role in member.roles
							.role= __n(static_types.members_roles[role][member.sex], 1)
					.item_name= member.i18n.name.get(locale)

if events && events.length > 0
	.context_column.events
		.context_title= __('события')
		.context_results
			each event in events
				a.result_item(href='/events/' + (event.sym ? event.sym : event._short_id))
					.item_poster(style='background-image: url(' + event.poster + ')')
					.item_title= event.i18n.title.get(locale)